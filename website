<body>
    <header>Git Guide for Python</header>
    <div class="container">
        <h2>Common Git Commands for Python Development</h2>
        <div class="command-box" id="commandBox">Click the button to show a Git command</div>
        <button onclick="showCommand()">Show Git Command</button>
    </div>
    <script>
        const commands = [
            "git init - Initialize a new Git repository",
            "git clone <repo_url> - Clone an existing Python project",
            "git add . - Stage all Python files for commit",
            "git commit -m 'Initial Python project setup' - Commit changes",
            "git push origin main - Push Python code to GitHub",
            "git pull origin main - Pull latest Python project changes",
            "git status - Show the status of your working Python directory",
            "git log - View commit history of your Python project",
            "git branch - List all branches in your Python repository",
            "git checkout -b feature_branch - Create and switch to a new branch for Python development"
        ];

        function showCommand() {
            const randomIndex = Math.floor(Math.random() * commands.length);
            document.getElementById("commandBox").innerText = commands[randomIndex];
        }
    </script>
</body>
